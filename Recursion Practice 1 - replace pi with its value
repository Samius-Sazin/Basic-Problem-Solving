/*
pippiippipxp
3.14p3.14ip3.14pxp
*/
#include<iostream>
#include<string.h>
using namespace std;
void Replace(string s);

int main()
{
    string str;
    cin>>str;
    Replace(str);

    return 0;
}

void Replace(string s)
{
    if(s.length()==0) return;
    else
    {
        if(s[0]=='p' && s[1]=='i')
        {
            cout<<"3.14";
            Replace(s.substr(2));
        }
        else
        {
            cout<<s[0];
            Replace(s.substr(1));
        }
    }
}
