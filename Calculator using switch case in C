#include<stdio.h>
int main()
{
    float num1,num2;
    char op;

    //First take operators/character then numbers.
    printf("Enter an operator (+,-,*,/) : ");
    scanf("%c",&op);
    printf("Enter first number : ");
    scanf("%f",&num1);
    printf("Enter second number : ");
    scanf("%f",&num2);

    switch(op)
    {

    case '+':
    {
        printf("Number1 + Number2 = %.1f",num1+num2);
        break;
    }

    case '-':
    {
        printf("Number1 - Number2 = %.1f",num1-num2);
        break;
    }

    case '*':
    {
        printf("Number1 * Number2 = %.1f",num1*num2);
        break;
    }

    case '/':
    {
        printf("Number1 / Number2 = %.1f",num1/num2);
        break;
    }

    default:
        printf("Not a valid noperator");

    }

    return 0;
}
