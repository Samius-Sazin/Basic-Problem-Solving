#include<iostream>
using namespace std;

int ncr(int t);

int main()
{
    while(1)
    {
        int n,r;
        cin>>n>>r;
        int o=ncr(n); //calling function to get n! value
        int p=ncr(r); //calling function to get r! value
        int q=ncr(n-r);//calling function to get (n-r)! value
        int result=o/(p*q);
        cout<<n<<"C"<<r<<" = "<<result<<endl;;
    }
    return 0;
}

int ncr(int t)
{
    int fact=1;
    for(int i=t; i>=2; i--)
    {
        fact*=i;
    }
    return fact;
}

/*

n=5
r=3
5C3 = 10

*/
